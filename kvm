#!/bin/bash

if [ $# -lt 1 ]
then
    echo "Usage kvm number [command]"
    exit 1
fi

if [ $1 == "help" ]
then
    shift
    kvm-help $@
fi

if [ $1 -lt 0 ]
then
    echo "Assign kvm a number 1-5"
    echo "Or use 0 for commands that support wildcards"
    exit 2
fi

if [ $1 -gt 5 ]
then
    echo "Assign kvm a number 1-5"
    exit 2
fi

if [ $# -eq 1 ]
then
    kvm-passwd
    kvm-mail
    kvm-launch
    kvm-clean
fi

if [ $# -gt 1 ]
then
    kvmnumber="$1"
    kvmcommand="$2"
    shift
    shift
fi

case $kvmcommand in
    ping)
        kvm-ping $1 $@
        ;;
    traceroute)
        kvm-traceroute $1 $@
        ;;
    launch)
        kvm-launch $1 $@
        ;;
    passwd)
        kvm-passwd $1 $@
        ;;
    mail)
        kvm-mail $1 $@
        ;;
    clean)
        kvm-clean $1 $@
        ;;
esac
